#include <stdio.h>
#include <locale.h>
#define _CRT_SECURE_NO_DEPREACTE
#define N 10 
float main()
{
	int A[N];
	int B[N];
	int temp;
	int lm;
	int i, t=0, t1;
	setlocale(LC_ALL, "RUS");
	for (i = 0; i < N; i++)
	{
		printf("a[%d] = ", i + 1);
		scanf("%d", &temp);
		A[i] = temp;
	}
	printf("Введите число: \n");
	scanf("%d", &lm);
	for (i = 0; i < N; i++)
	{
		if (A[i] % 2 != 0)
			B[i] = lm;
		else 
			B[i] = A[i];
	}
	printf("|Индекс|Исходное значение|Новое значение|\n");
	for (int i = 0; i < N; i++)
	{
		printf("| %d    |        %.2d        |     %.2d        |\n", i, A[i], B[i]);
	}
	for (int i = 0; i < N; i++)
	{
		t = t + B[i];
	}
	t1 = t / N;
	printf("Средне арифметическое значение = %d", t1);
}
